<%= render "shared/header" %>
<div class="mx-4 mt-3 -mb-3">
  <%= paginate @employees %>
  <div class="not-prose relative bg-slate-50 rounded-xl overflow-hidden dark:bg-slate-800/25">
    <div style="background-position:10px 10px" class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]"></div>
    <div class="relative rounded-xl overflow-auto">
      <div id="dvContents" class="shadow-sm overflow-hidden my-8">
        <table class="border-collapse table-auto w-full text-sm">
          <thead>
            <tr>
              <th class="border-b dark:border-slate-800 font-large p-4 pl-8 pt-0 pb-3 text-slate-900 dark:text-slate-200 text-left">ተ.ቁ</th>
              <th class="border-b dark:border-slate-800 font-large p-4 pl-8 pt-0 pb-3 text-slate-900 dark:text-slate-200 text-left">ሙሉ ስም</th>
              <th class="border-b dark:border-slate-800 font-large p-4 pt-0 pb-3 text-slate-900 dark:text-slate-200 text-left">የተጠቀሙት ኩፖን</th>
              <th class="border-b dark:border-slate-800 font-large p-4 pr-8 pt-0 pb-3 text-slate-900 dark:text-slate-200 text-left">ድምር</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-slate-800">
            <% @employees.each_with_index do |employee, index| %>
              <tr>
                <tr>
                  <td class="border-b border-slate-200 dark:border-slate-700 p-4 pl-8 text-slate-900 dark:text-slate-400"><%= index + 1 %></td>
                  <td class="border-b border-slate-200 dark:border-slate-700 p-4 pl-8 text-slate-900 dark:text-slate-400"><%= employee.first_name + " " + employee.father_name + " " + employee.last_name %></td>
                  <td class="border-b border-slate-200 dark:border-slate-700 p-4 text-slate-900 dark:text-slate-400"><%= 10 - employee.remaining %></td>
                  <td class="border-b border-slate-200 dark:border-slate-700 p-4 pr-8 text-slate-900 dark:text-slate-400"><%= 20*(10 - employee.remaining) %></td>
                </tr>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="absolute inset-0 pointer-events-none border border-black/5 rounded-xl dark:border-white/5"></div>
  </div>
  <%= paginate @employees %>
</div>
